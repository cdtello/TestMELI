{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {
        "describe": true,
        "beforeEach": true,
        "afterEach": true,
        "context": true,
        "it": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "array-bracket-spacing": [2, "never"],
        "block-scoped-var": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": 1,
        "computed-property-spacing": [2, "never"],
        "class-methods-use-this": 0,
        "curly": 2,
        "eol-last": 2,
        "eqeqeq": [2, "smart"],
        "max-depth": [1, 3],
        "max-len": [1, 100],
        "max-statements": [1, 30],
        "new-cap": 1,
        "no-extend-native": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "no-unused-vars": 1,
        "no-use-before-define": [2, "nofunc"],
        "no-underscore-dangle": ["error", {
          "allowAfterThis": true
        }],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "keyword-spacing": [2, {"before": true, "after": true}],
        "space-unary-ops": 2,
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }]
    }
   }
   